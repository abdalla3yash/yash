<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.a3yashspc.yash.SettingActivity">

    <include
        android:id="@+id/setting_toolbar"
        layout="@layout/app_bar_layout" >
    </include>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/setting_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/setting_toolbar"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_profile_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_profile_image" />
    </LinearLayout>

    <TextView
        android:id="@+id/setting_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/setting_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="UserName"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/setting_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/setting_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="UserStatus"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <Button
        android:id="@+id/setting_change_profile_image_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setting_change_status_btn"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Change Profile"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/setting_change_status_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@color/colorPrimary"
        android:text="Change Statues"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>
